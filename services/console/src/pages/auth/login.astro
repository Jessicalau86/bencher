---
export const prerender = false;

import AuthLayout from "../../layouts/auth/AuthLayout.astro";
import AuthForm from "../../components/auth/AuthForm";
import AuthRedirect from "../../components/auth/AuthRedirect";

const BENCHER_API_URL = import.meta.env.BENCHER_API_URL;
const title = "Log in";
---

<AuthLayout title={title}>
  <AuthRedirect client:only="solid-js" path="/console" />

  <h2 class="title">{title}</h2>

  <AuthForm client:only="solid-js" apiUrl={BENCHER_API_URL} newUser={false} />

  <hr />

  <p class="has-text-centered">
    <small>
      switch to <a href="/auth/signup">sign up</a>
    </small>
  </p>
</AuthLayout>
