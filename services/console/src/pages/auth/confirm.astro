---
export const prerender = false;

import AuthLayout from "../../layouts/auth/AuthLayout.astro";
import ConfirmForm from "../../components/auth/ConfirmForm";
import AuthRedirect from "../../components/auth/AuthRedirect";

const BENCHER_API_URL = import.meta.env.BENCHER_API_URL;
const title = "Confirm Token";
---

<AuthLayout title={title}>
  <AuthRedirect client:only="solid-js" path="/console" />

  <h2 class="title">{title}</h2>
  <h3 class="subtitle">
    Please check your email for a one-time token. Either click the link or paste
    the token here.
  </h3>

  <ConfirmForm client:only="solid-js" apiUrl={BENCHER_API_URL} />
</AuthLayout>
