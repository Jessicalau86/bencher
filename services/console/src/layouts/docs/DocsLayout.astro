---
import BaseLayout from "../BaseLayout.astro";
import AuthNavbar from "../../components/site/navbar/AuthNavbar";
import DocsMenu from "../../components/docs/DocsMenu.astro";

interface Props {
  title: string;
  description: string;
  heading?: string;
}

const { title, description, heading } = Astro.props;
---

<BaseLayout
  title={title}
  titleFmt={(title) => `ðŸ“– ${title}`}
  description={description}
>
  <!-- Note that the AuthNavbar does *not* fill the slot `navbar`. It is a client-side override.  -->
  <AuthNavbar client:only />
  <div class="is-widescreen">
    <div class="columns is-reverse-mobile">
      <div class="columns">
        <div class="column is-narrow">
          <DocsMenu />
        </div>
      </div>
      <div class="column is-two-thirds">
        <section class="section">
          <div class="continer">
            {
              heading ? (
                <div class="content">
                  <h1 class="title">{heading}</h1>
                  <hr />
                  <slot />
                </div>
              ) : (
                <slot />
              )
            }
          </div>
        </section>
      </div>
    </div>
  </div>
</BaseLayout>
